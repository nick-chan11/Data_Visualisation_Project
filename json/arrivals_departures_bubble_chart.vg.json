{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "config": {
    "text": {"font": "Segoe UI, Arial, sans-serif"},
    "axis": {"labelFont": "Segoe UI, Arial, sans-serif", "titleFont": "Segoe UI, Arial, sans-serif"},
    "legend": {"labelFont": "Segoe UI, Arial, sans-serif", "titleFont": "Segoe UI, Arial, sans-serif"},
    "title": {"font": "Segoe UI, Arial, sans-serif"}
  },
  "width": 460,
  "height": 300,
  "title": "Number of Outgoing Domestic Departures by City",
  "data": {
    "name": "flight_paths",
    "url": "https://raw.githubusercontent.com/ncha0085/FIT3179/refs/heads/main/data/dom_citypairs.csv"
  },
  "params": [
    {
      "name": "YearSelect",
      "value": 2024,
      "bind": {
        "input": "select",
        "options": [2017, 2018, 2019, 2020, 2021, 2022, 2023, 2024],
        "labels": [
          "2017",
          "2018",
          "2019",
          "2020",
          "2021",
          "2022",
          "2023",
          "2024"
        ],
        "name": "Year: "
      }
    }
  ],
  "transform": [
    { "filter": "datum.Year == YearSelect" },
    {
      "aggregate": [
        { "op": "sum", "field": "Aircraft_Trips", "as": "Departures" }
      ],
      "groupby": ["City1"]
    },
    {
      "calculate": "datum.City1 + ' (' + format(datum.Departures / 1000, '.1f') + 'k' + ')'",
      "as": "CityAndTrips"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "circle",
        "opacity": 0.8
      },
      "encoding": {
        "x": {
          "field": "City1",
          "type": "nominal",
          "title": "Origin City",
          "sort": "-y",
          "axis": { "labels": false }
        },
        "y": {
          "field": "Departures",
          "type": "quantitative",
          "title": "Number of Departures",
          "axis": {
            "labels": false,
            "grid": false
          }
        },
        "size": {
          "field": "Departures",
          "type": "quantitative",
          "title": "Number of Departures",
          "scale": { "range": [100, 2000] }
        },
        "color": {
          "field": "City1",
          "type": "nominal",
          "legend": null
        },
        "tooltip": [
          { "field": "City1", "type": "nominal", "title": "Origin City" },
          {
            "field": "Departures",
            "type": "quantitative",
            "title": "Departures"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "dx": 0,
        "dy": -25,
        "fontSize": 12,
        "font": "Segoe UI, Arial, sans-serif",
        "color": "black"
      },
      "encoding": {
        "x": { "field": "City1", "type": "nominal" },
        "y": { "field": "Departures", "type": "quantitative" },
        "text": { "field": "CityAndTrips", "type": "nominal" }
      }
    }
  ]
}
