{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 700,
  "height": 500,
  "title": "Number of Outgoing Departures by City",
  "data": {
    "name": "flight_paths",
    "url": "https://raw.githubusercontent.com/ncha0085/FIT3179/refs/heads/main/dom_citypairs.csv"
  },
  "params": [
    {
      "name": "YearSelect",
      "value": 2024,
      "bind": {
        "input": "select",
        "options": [2019, 2020, 2021, 2022, 2023, 2024],
        "labels": ["2019", "2020", "2021", "2022", "2023", "2024"],
        "name": "Year: "
      }
    }
  ],
  "transform": [
    { "filter": "datum.Year == YearSelect" },
    {
      "aggregate": [{ "op": "count", "as": "Departures" }],
      "groupby": ["City1"]
    }
  ],
  "mark": {
    "type": "circle",
    "opacity": 0.7
  },
  "encoding": {
    "x": {
      "field": "City1",
      "type": "nominal",
      "title": "Origin City",
      "sort": "-y"
    },
    "y": {
      "field": "Departures",
      "type": "quantitative",
      "title": "Number of Departures"
    },
    "size": {
      "field": "Departures",
      "type": "quantitative",
      "title": "Number of Departures",
      "scale": { "range": [100, 2000] }
    },
    "color": {
      "field": "City1",
      "type": "nominal",
      "legend": null
    },
    "tooltip": [
      { "field": "City1", "type": "nominal", "title": "Origin City" },
      { "field": "Departures", "type": "quantitative", "title": "Departures" }
    ]
  }
}
